# MongoDB Configuration
MONGO_URL="mongodb://localhost:27017"
DB_NAME="geofence_db"

# MongoDB Authentication (optional - recommended for production)
# Leave empty for local development without auth
MONGO_USER=""
MONGO_PASSWORD=""

# Security Configuration
# Generate a new SECRET_KEY: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your-super-secret-key-change-this"

# CORS Configuration - Restrict to your frontend URL
CORS_ORIGINS="http://localhost:3000"

# Email Configuration
GMAIL_USER="your-gmail@gmail.com"
GMAIL_APP_PASSWORD="your-app-password"

# Security Settings
SECURE_COOKIES=True  # Set to True when using HTTPS in production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENABLE_RATE_LIMITING=True
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# IP-based Rate Limiting
IP_RATE_LIMIT_MAX_REQUESTS=100
IP_RATE_LIMIT_WINDOW_MINUTES=1

# Admin Configuration - Change these credentials immediately
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-this-password-immediately"
ADMIN_EMAIL="admin@example.com"

# Redis Configuration (optional - for distributed token persistence)
# Leave empty to use in-memory blacklist
# Set to redis://localhost:6379 to use Redis
REDIS_URL=""
